{% extends 'base.html.twig' %}

{% block title %}Mes commandes{% endblock %}

{% block body %}
    {% for cart in carts %}
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Order {{ cart.id }}#</th>
                <th scope="col">{{ cart.total/100 }}â‚¬</th>
                <th>
                    <span class="badge badge-primary">
                        {{ cart.state.label }}
                    </span>
                    <a href="{{ path('update_state', {'id': cart.id}) }}" class="btn btn-primary">
                        Update to {{ cart.nextState }}
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td scope="row" colspan="2">
                    <table class="table">
                        {% for selection in cart.selections %}
                        <tr>
                            <th scope="row">
                                <span class="badge badge-primary">{{ selection.product.category.name }}</span>
                            </th>
                            <td>
                                {{ selection.product.name }} x{{ selection.quantity }}
                            </td>
                        </tr>
                        {% endfor %}
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
    {% endfor %}
{% endblock %}
